<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.*?>

<VBox styleClass="background" prefHeight="550.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.AssociationController">
    
    <ImageView fitWidth="600.0"> 
        <image>
            <Image url = "@NBA_Back.jpg"/>
        </image>
    </ImageView>
    <GridPane alignment="CENTER" hgap="20" vgap="20">
        <Button 
            GridPane.columnIndex="0" GridPane.rowIndex="0" text ="Explore the teams" onAction="#exploreTeams" styleClass="button"/> 
        <Button
            GridPane.columnIndex="2" GridPane.rowIndex="0" text ="Arrange a new season" onAction="#newSeason" styleClass="button"/> 
        <Button
            GridPane.columnIndex="1" GridPane.rowIndex="1" text ="Exit" onAction="#exit" styleClass="button"/> 
    </GridPane>    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
